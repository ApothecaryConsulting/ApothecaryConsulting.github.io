---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { contactLinks } from '../data/contact';
---

<Layout title="Contact Us - Apothecary Consulting">
	<Header />
	
	<div class="hero">
		<h1>Let's Connect</h1>
		<p>Ready to transform your data and AI capabilities? We'd love to hear from you.</p>
	</div>

	<div class="container">
		<div class="contact-section">
			<div class="contact-intro">
				<h2>Get in Touch</h2>
				<p>
					Whether you're looking to build AI-powered solutions, optimize your data infrastructure, 
					or explore how machine learning can drive your business forward, our team is here to help.
				</p>
				<p>
					Reach out to us through any of the channels below, and we'll get back to you promptly 
					to discuss your project needs.
				</p>
			</div>

			<div class="contact-methods">
				{contactLinks.map((link) => (
					<a href={link.url} class="contact-card" target="_blank" rel="noopener noreferrer">
						<div class="contact-icon">{link.label.includes('Email') ? '‚úâÔ∏è' : link.label.includes('LinkedIn') ? 'üîó' : 'üíª'}</div>
						<h3>{link.label}</h3>
						<p>Connect with us on {link.label}</p>
					</a>
				))}
			</div>

			<div class="info-section">
				<h2>What to Expect</h2>
				<div class="info-grid">
					<div class="info-card">
						<div class="info-number">1</div>
						<h3>Initial Consultation</h3>
						<p>We'll discuss your business needs, challenges, and goals to understand how we can help.</p>
					</div>
					<div class="info-card">
						<div class="info-number">2</div>
						<h3>Proposal & Planning</h3>
						<p>Receive a detailed proposal with timeline, deliverables, and transparent pricing.</p>
					</div>
					<div class="info-card">
						<div class="info-number">3</div>
						<h3>Implementation</h3>
						<p>Our team works closely with you to deliver high-quality solutions on time.</p>
					</div>
					<div class="info-card">
						<div class="info-number">4</div>
						<h3>Support & Growth</h3>
						<p>Ongoing support and optimization to ensure long-term success.</p>
					</div>
				</div>
			</div>

			<div class="cta-section">
				<h2>Ready to Get Started?</h2>
				<p>Let's build something amazing together.</p>
				<div class="btn-container">
					{contactLinks.map((link) => (
						<a href={link.url} class="btn" target="_blank" rel="noopener noreferrer">{link.label}</a>
					))}
				</div>
			</div>
		</div>
	</div>

	<Footer />
</Layout>

<style>
	.hero {
		text-align: center;
		padding: 80px 20px 40px;
		background: none;
	}

	.hero h1 {
		font-size: 40px;
		font-weight: 700;
		margin-bottom: 20px;
	}

	.hero p {
		font-size: 18px;
		color: #bdbdbd;
		max-width: 800px;
		margin: 0 auto;
	}

	.contact-section {
		max-width: 1000px;
		margin: 0 auto;
	}

	.contact-intro {
		text-align: center;
		margin-bottom: 60px;
	}

	.contact-intro h2 {
		font-size: 32px;
		font-weight: 700;
		margin-bottom: 20px;
		color: #f39c12;
	}

	.contact-intro p {
		font-size: 18px;
		line-height: 1.8;
		color: #d3d3d3;
		margin-bottom: 15px;
	}

	.contact-methods {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 30px;
		margin-bottom: 60px;
	}

	.contact-card {
		background: rgba(28, 28, 30, 0.9);
		padding: 40px 30px;
		border-radius: 15px;
		text-align: center;
		text-decoration: none;
		transition: transform 0.3s, box-shadow 0.3s;
		box-shadow: 0 4px 15px rgba(255, 255, 255, 0.1);
	}

	.contact-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 6px 20px rgba(243, 156, 18, 0.3);
	}

	.contact-icon {
		font-size: 48px;
		margin-bottom: 20px;
	}

	.contact-card h3 {
		font-size: 24px;
		color: #f39c12;
		margin-bottom: 10px;
	}

	.contact-card p {
		font-size: 16px;
		color: #bdbdbd;
	}

	.info-section {
		margin-bottom: 60px;
	}

	.info-section h2 {
		font-size: 32px;
		font-weight: 700;
		margin-bottom: 40px;
		color: #f39c12;
		text-align: center;
	}

	.info-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
		gap: 30px;
	}

	.info-card {
		background: rgba(28, 28, 30, 0.7);
		padding: 30px;
		border-radius: 10px;
		text-align: center;
	}

	.info-number {
		width: 50px;
		height: 50px;
		background: #f39c12;
		color: black;
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 24px;
		font-weight: 700;
		margin: 0 auto 20px;
	}

	.info-card h3 {
		font-size: 20px;
		color: #ffffff;
		margin-bottom: 10px;
	}

	.info-card p {
		font-size: 15px;
		color: #d3d3d3;
		line-height: 1.6;
	}

	.cta-section {
		text-align: center;
		background: rgba(28, 28, 30, 0.9);
		padding: 50px 30px;
		border-radius: 15px;
	}

	.cta-section h2 {
		font-size: 32px;
		margin-bottom: 15px;
	}

	.cta-section p {
		font-size: 18px;
		color: #d3d3d3;
		margin-bottom: 30px;
	}

	.btn-container {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: 15px;
	}

	.btn {
		padding: 15px 40px;
		background-color: #f39c12;
		color: black;
		font-weight: 600;
		text-decoration: none;
		border-radius: 8px;
		transition: background 0.3s;
		font-size: 18px;
	}

	.btn:hover {
		background-color: #e67e22;
	}

	@media screen and (max-width: 768px) {
		.hero h1 {
			font-size: 32px;
		}
		
		.contact-methods {
			grid-template-columns: 1fr;
		}

		.info-grid {
			grid-template-columns: 1fr;
		}

		.btn-container {
			flex-direction: column;
			align-items: center;
		}

		.btn {
			width: 80%;
		}
	}
</style>

