---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import ServiceCard from '../components/ServiceCard.astro';
import TeamCard from '../components/TeamCard.astro';
import Footer from '../components/Footer.astro';

import { services } from '../data/services';
import { team } from '../data/team';
import { contactLinks } from '../data/contact';
---

<Layout title="ApotheCary Consulting">
	<Header />
	
	<Hero 
		title="Revolutionizing AI & Data Solutions"
		description="Empowering businesses with next-generation AI, data engineering, and cloud technologies."
	/>

	<div class="container" id="services" style="margin-top: -20px;">
		<div class="section">
			<h2>Watch Our Introduction</h2>
			<p>Learn more about our capabilities and vision.</p>
			<iframe 
				style="border-radius: 12px;" 
				src="https://www.loom.com/embed/d97769aa6a1b4fa68cd2b77680c0731b" 
				width="100%" 
				height="400" 
				frameborder="0" 
				allowfullscreen
			></iframe>
		</div>
		
		<div class="section">
			<h2>What We Offer</h2>
			<div class="cards">
				{services.map((service) => (
					<ServiceCard 
						icon={service.icon}
						title={service.title}
						description={service.description}
						tools={service.tools}
					/>
				))}
			</div>
		</div>
	</div>

	<div class="container" id="team">
		<div class="section">
			<h2>Meet the Team</h2>
			<div class="cards">
				{team.map((member) => (
					<TeamCard 
						name={member.name}
						role={member.role}
						description={member.description}
						imageUrl={member.imageUrl}
					/>
				))}
			</div>
		</div>
	</div>

	<div class="container" id="contact">
		<h2>Let's Connect</h2>
		<div class="btn-container">
			{contactLinks.map((link) => (
				<a href={link.url} class="btn">{link.label}</a>
			))}
		</div>
	</div>

	<Footer />
</Layout>

<style>
	.section p {
		color: #bdbdbd;
		margin-bottom: 20px;
	}

	.btn-container {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: 10px;
		margin-top: 20px;
	}

	.btn {
		padding: 10px 20px;
		background-color: #f39c12;
		color: black;
		font-weight: 600;
		text-decoration: none;
		border-radius: 8px;
		transition: background 0.3s;
		font-size: 16px;
	}

	.btn:hover {
		background-color: #e67e22;
	}

	@media screen and (max-width: 768px) {
		.btn-container {
			flex-direction: column;
			align-items: center;
		}

		.btn {
			width: 80%;
			text-align: center;
		}
	}
</style>

