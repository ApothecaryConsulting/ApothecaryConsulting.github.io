---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import ServiceCard from '../components/ServiceCard.astro';
import Footer from '../components/Footer.astro';

import { services } from '../data/services';
---

<Layout title="Apothecary Consulting">
	<Header />
	
	<Hero 
		title="Revolutionizing AI & Data Solutions"
		description="Empowering businesses with next-generation AI, data engineering, and cloud technologies."
	/>

	<div class="container" style="margin-top: -20px;">
		<div class="section">
			<h2>Watch Our Introduction</h2>
			<p>Learn more about our capabilities and vision.</p>
			<iframe
				style="border-radius: 12px;"
				src="https://www.loom.com/embed/d97769aa6a1b4fa68cd2b77680c0731b"
				width="100%"
				height="400"
				frameborder="0"
				allowfullscreen
			></iframe>
		</div>

		<div class="section">
			<h2>What We Offer</h2>
			<div class="cards">
				{services.map((service) => (
					<ServiceCard
						icon={service.icon}
						title={service.title}
						description={service.description}
						tools={service.tools}
					/>
				))}
			</div>
		</div>
	</div>

	<Footer />
</Layout>

<style>
	.section p {
		color: #bdbdbd;
		margin-bottom: 20px;
	}
</style>

