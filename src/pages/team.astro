---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { team } from '../data/team';
---

<Layout title="Our Team - Apothecary Consulting">
	<Header />
	
	<div class="hero">
		<h1>Meet the Team</h1>
		<p>Expert engineers and data scientists dedicated to delivering exceptional AI and data solutions</p>
	</div>

	<div class="container">
		<div class="team-grid">
			{team.map((member) => (
				<div class="team-member">
					<div class="member-header">
						<img src={member.imageUrl} alt={member.name} class="member-image" />
						<div class="member-info">
							<h2>{member.name}</h2>
							<h3 class="role">{member.role}</h3>
							<p class="title">{member.title}</p>
						</div>
					</div>
					<p class="description">{member.description}</p>
					
					<div class="skills">
						<h4>Key Skills</h4>
						<div class="skills-tags">
							{member.skills.map((skill) => (
								<span class="skill-tag">{skill}</span>
							))}
						</div>
					</div>

					<div class="contact-links">
						{member.linkedin && (
							<a href={member.linkedin} target="_blank" rel="noopener noreferrer" class="contact-btn">
								<span>üîó</span> LinkedIn
							</a>
						)}
						{member.email && (
							<a href={`mailto:${member.email}`} class="contact-btn">
								<span>‚úâÔ∏è</span> Email
							</a>
						)}
					</div>
				</div>
			))}
		</div>
	</div>

	<Footer />
</Layout>

<style>
	.hero {
		text-align: center;
		padding: 80px 20px 40px;
		background: none;
	}

	.hero h1 {
		font-size: 40px;
		font-weight: 700;
		margin-bottom: 20px;
	}

	.hero p {
		font-size: 18px;
		color: #bdbdbd;
		max-width: 800px;
		margin: 0 auto;
	}

	.team-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 40px;
		margin-top: 40px;
	}

	.team-member {
		background: rgba(28, 28, 30, 0.9);
		padding: 30px;
		border-radius: 15px;
		box-shadow: 0 4px 15px rgba(255, 255, 255, 0.1);
		transition: transform 0.3s;
	}

	.team-member:hover {
		transform: translateY(-5px);
	}

	.member-header {
		display: flex;
		gap: 20px;
		margin-bottom: 20px;
		align-items: flex-start;
	}

	.member-image {
		width: 100px;
		height: 100px;
		border-radius: 50%;
		object-fit: cover;
		border: 3px solid #f39c12;
	}

	.member-info h2 {
		font-size: 24px;
		font-weight: 700;
		margin-bottom: 5px;
		color: #ffffff;
	}

	.role {
		font-size: 18px;
		color: #f39c12;
		font-weight: 600;
		margin-bottom: 5px;
	}

	.title {
		font-size: 14px;
		color: #bdbdbd;
		font-style: italic;
	}

	.description {
		font-size: 16px;
		line-height: 1.6;
		color: #d3d3d3;
		margin-bottom: 20px;
	}

	.skills h4 {
		font-size: 16px;
		color: #f39c12;
		margin-bottom: 10px;
	}

	.skills-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 8px;
		margin-bottom: 20px;
	}

	.skill-tag {
		background: rgba(243, 156, 18, 0.2);
		color: #f39c12;
		padding: 6px 12px;
		border-radius: 20px;
		font-size: 13px;
		font-weight: 500;
	}

	.contact-links {
		display: flex;
		gap: 10px;
		flex-wrap: wrap;
	}

	.contact-btn {
		padding: 10px 20px;
		background-color: #f39c12;
		color: black;
		font-weight: 600;
		text-decoration: none;
		border-radius: 8px;
		transition: background 0.3s;
		font-size: 14px;
		display: flex;
		align-items: center;
		gap: 5px;
	}

	.contact-btn:hover {
		background-color: #e67e22;
	}

	@media screen and (max-width: 768px) {
		.hero h1 {
			font-size: 32px;
		}
		
		.team-grid {
			grid-template-columns: 1fr;
		}

		.member-header {
			flex-direction: column;
			align-items: center;
			text-align: center;
		}
	}
</style>

